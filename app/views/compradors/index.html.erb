<p id="notice"><%= notice %></p>

<h1>Compradors</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Contacto</th>
      <th>Mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compradors.each do |comprador| %>
      <tr>
        <td><%= comprador.nombre %></td>
        <td><%= comprador.contacto %></td>
        <td><%= comprador.mail %></td>
        <td><%= link_to 'Show', comprador %></td>
        <td><%= link_to 'Edit', edit_comprador_path(comprador) %></td>
        <td><%= link_to 'Destroy', comprador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

