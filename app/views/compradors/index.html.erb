<p id="notice"><%= notice %></p>

<div class="container">
  <div class="d-flex justify-content-between">
    <h1 class="text-center">Compradores</h1>
    <%= link_to 'Nuevo comprador', new_comprador_path, class:"btn btn-success text-white" %>
  </div>
  <br>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Contacto</th>
      <th>Mail</th>
      <th>Documento</th>
      <th>Ventas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @compradors.each do |comprador| %>
      <tr>
        <td><%= link_to "#{comprador.nombre}", edit_comprador_path(comprador) %></td>
        <td><%= comprador.contacto %></td>
        <td><%= comprador.mail %></td>
        <% if comprador.document.attached? %>
          <td><%= link_to("Doc", cl_image_path("#{comprador.document.key}")) %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <td><%= comprador.sales.count() %></td>
        <td><%= link_to 'x', comprador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comprador', new_comprador_path %>
