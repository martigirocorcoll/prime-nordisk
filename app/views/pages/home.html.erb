<div class="container">
  <div class="mb-5 mt-3">
    <h1 class="text-center">Prime Nordisk</h1>
    <h3 class="text-center">Encuentra todos los proyectos actuales</h3>
  </div>

  <div class="grid-wrapper justify-content-around">
    <% @investments.each do |investment|%>
        <div class="home-card" style="width: 18rem; margin: 1rem;">
          <% if investment.photo.attached? %>
            <img class="card-img-top" src="<%=cl_image_path investment.photo.key%>" alt="Card image cap">
            <% else %>
            <img class="card-img-top" src="https://res.cloudinary.com/dfm1w1uco/image/upload/v1674212652/no-propertyfound_fpnsxp.png" alt="Card image cap">
          <% end %>
          <div class="card-body">
                <div class = "d-flex justify-content-between align-items-center">
                <h5 class="card-title"><%= investment.poblacion %></h5>
                <p class="btn btn-outline-success">+<%= investment.rentabilidad.to_i%>%</p>
                </div>
                <ul>
                  <li class="card-text"><%= investment.description %></li>
                </ul>
                <%= link_to investment, :action => 'go' do %>
                  <button class="boton_card_home btn btn-success text-white">Descubrir</button>
                <% end %>
            </div>
        </div>
    <% end %>
  </div>
</div>
