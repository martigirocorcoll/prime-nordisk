<p id="notice"><%= notice %></p>

<h1>Pagadors</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagadors.each do |pagador| %>
      <tr>
        <td><%= pagador.nombre %></td>
        <td><%= link_to 'Show', pagador %></td>
        <td><%= link_to 'Edit', edit_pagador_path(pagador) %></td>
        <td><%= link_to 'Destroy', pagador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pagador', new_pagador_path %>
